[module/miro]
type = custom/script
exec = ~/.config/polybar/scripts/links.sh
format-prefix = ""
format-prefix-padding-left = 0
format-prefix-padding-right = 0
format-prefix-foreground = ${colors.foreground}
label-padding = 0
label-foreground = ${colors.foreground}
click-left = brave https://miro.com/app/board/uXjVOYswI1Q=/
format-background = 
format-underline = 
;#c89148

